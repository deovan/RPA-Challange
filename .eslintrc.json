{
  "env": {
    "node": true,
    "es2021": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["**/docs/**/*.js", "**/dist/**"],
  "rules": {
    "max-len": ["warn", 140],
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": ["error", "always"]
  }
}
